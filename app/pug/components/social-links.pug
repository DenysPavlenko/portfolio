include /components/link
mixin social-links({ links, smColumn })
  -
    var defaultLinks = [
      {title:'Linkedin', link:'https://www.linkedin.com/in/denys-pavlenko-2972451ba/'},
      {title:'Upwork', link:'https://www.upwork.com/freelancers/~01afbe36b18bde6452'},
      {title:'Envato', link:'https://themeforest.net/user/themescode/portfolio'},
      {title:'Email', link:'mailto:de.pavlenko@gmail.com'},
    ]
    const classnames = classNames({
      'social-links': true,
      'social-links--sm-column': smColumn,
      [classes]: classes
    })
    const data = links ? links : defaultLinks

  div(class=classnames)
    each item, idx in data
      .social-links__link
        +link({ href:item.link, text:item.title })
